<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:clipChildren="false"
    app:cardCornerRadius="10dp"
    app:cardElevation="1dp"
    app:cardPreventCornerOverlap="false"
    android:background="@color/md_white_1000">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/itemID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivItemUser"
                android:layout_width="150dp"
                android:layout_height="160dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:baselineAlignBottom="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tvEyes"
            android:layout_below="@id/value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textAlignment="center"
            android:textColor="@color/md_white_1000"
            android:textSize="@dimen/font_size_medium"
            android:layout_marginTop="-50dp"
            android:layout_marginStart="20dp"
            android:drawableBottom="@drawable/ic_view" />

        <TextView
            android:id="@+id/tvchat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/value"
            android:layout_marginStart="20dp"
            android:layout_marginTop="-50dp"
            android:layout_toEndOf="@+id/tvEyes"
            android:drawableBottom="@drawable/ic_chat"
            android:text="2"
            android:textAlignment="center"
            android:textColor="@color/md_white_1000"
            android:textSize="@dimen/font_size_medium" />

        <TextView
            android:id="@+id/tvLikes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/value"
            android:layout_marginStart="20dp"
            android:layout_marginTop="-50dp"
            android:layout_toEndOf="@+id/tvchat"
            android:drawableBottom="@drawable/ic_heart_simple"
            android:text="2"
            android:textAlignment="center"
            android:textColor="@color/md_white_1000"
            android:textSize="@dimen/font_size_medium" />
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>